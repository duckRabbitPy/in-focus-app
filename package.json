{
  "name": "in-focus",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "bun ./scripts/security-audit && next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "lint": "next lint",
    "db:seed:create": "bun seed.create.mts",
    "db:schema": "psql -U postgres -d in_focus -f schema.sql",
    "db:seed": "psql -U postgres -d in_focus -f seed.sql",
    "db:reset": "yarn db:schema && yarn db:seed",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@faker-js/faker": "^9.6.0",
    "@tanstack/react-query": "^5.68.0",
    "@tanstack/react-query-devtools": "^5.68.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.9",
    "bcryptjs": "^3.0.2",
    "jose": "^6.0.9",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "next": "15.2.1",
    "pg": "^8.11.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "ts-node": "^10.9.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/pg": "^8.11.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.2.1",
    "jest": "^29.7.0",
    "node-mocks-http": "^1.16.2",
    "ts-jest": "^29.3.1",
    "typescript": "^5"
  }
}
